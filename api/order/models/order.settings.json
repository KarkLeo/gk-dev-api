{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "number": {
      "type": "uid",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "created",
        "accepted",
        "paid",
        "sent",
        "received"
      ],
      "required": true
    },
    "user": {
      "via": "orders",
      "plugin": "users-permissions",
      "model": "user"
    },
    "delivery_info": {
      "type": "component",
      "repeatable": false,
      "component": "user.delivery-info",
      "required": true
    },
    "cart_item": {
      "type": "component",
      "repeatable": true,
      "component": "cart.cart-item",
      "required": true
    },
    "total_cost": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "decimal",
      "required": true
    },
    "discounted_cost": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "user_phone_number": {
      "type": "string"
    },
    "user_email": {
      "type": "email"
    }
  }
}
